@model projet_dot_net.Model.Academies

@{
    ViewBag.Title = "Supprimer une académie";
}

<header class="jumbotron-fluid">
    <br />
    <br />
    <br />
    <br />
    <h2 class="text-center text-primary">Supprimer une académie</h2>
</header>

<div>
   
    <div class="container">
        <div class="alert alert-danger" role="alert">
            <h3>Etes vous sûr de vouloir supprimer une académie ?</h3>
        </div>
        <div class="jumbotron">
            <div class="row">
                <div class="col">@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(model => model.Name)</div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                @Html.ActionLink("Retour à la liste", "Index")
            </div>
        }
    </div>
    
</div>
