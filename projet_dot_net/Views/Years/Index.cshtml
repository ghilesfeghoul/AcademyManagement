@model IEnumerable<projet_dot_net.Model.Years>

@{
    ViewBag.Title = "Index";
}

<header class="jumbotron-fluid">
    <br />
    <br />
    <br />
    <br />
    <h2 class="text-center text-primary">Liste des années</h2>
</header>


<section class="container">

    <p>
        @Html.ActionLink("Ajouter une année", "Create", null, new { @class = "btn btn-outline-dark pull-right" })
    </p>
    <br />
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Voir détails", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Supprimer", new { id = item.Id })
                    </td>
                </tr>
            }
            </tbody>
    </table>
</section>