@model IEnumerable<projet_dot_net.Model.Classrooms>

@{
    ViewBag.Title = "Index";
}

<header class="jumbotron-fluid">
    <br />
    <br />
    <br />
    <br />
    <h2 class="text-center text-primary">Liste des classes</h2>
</header>
<section class="container">
    <p>
        @Html.ActionLink("Créer une nouvelle classe", "Create", null, new { @class = "btn btn-outline-dark pull-right" })
    </p>
    <br />
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Establishments.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Years.Id)
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Establishments.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Users.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Years.Id)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>