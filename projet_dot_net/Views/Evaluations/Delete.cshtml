@model projet_dot_net.Model.Evaluations

@{
    ViewBag.Title = "Delete";
}

<header class="jumbotron-fluid">
    <br />
    <br />
    <br />
    <br />
    <h2 class="text-center text-primary">Supprimer l'évaluation</h2>
</header>

<div class="container">
    <div class="alert alert-danger" role="alert">
        <h3>Etes vous sûr de vouloir supprimer cette évaluation ?</h3>
    </div>
    <div class="jumbotron">
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.Date) : @Html.DisplayFor(model => model.Date)</div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.TotalPoint) : @Html.DisplayFor(model => model.TotalPoint)</div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.Classrooms.Title) : @Html.DisplayFor(model => model.Classrooms.Title) </div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.Periods.Id) : @Html.DisplayFor(model => model.Periods.Id) </div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.Users.UserName) : @Html.DisplayFor(model => model.Users.UserName)</div>
        </div>

    </div>

</div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                @Html.ActionLink("Retour à la liste", "Index")
            </div>
        }
    
