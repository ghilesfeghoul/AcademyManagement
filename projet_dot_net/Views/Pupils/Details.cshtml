@model projet_dot_net.Model.Pupils

@{
    ViewBag.Title = "Details";
}

<header class="jumbotron-fluid">
    <br />
    <br />
    <br />
    <br />
    <h2 class="text-center text-primary">Détails de l'élève</h2>
</header>
<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.FirstName) : @Html.DisplayFor(model => model.FirstName)</div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.LastName) : @Html.DisplayFor(model => model.LastName)</div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.Sex) : @Html.DisplayFor(model => model.Sex)</div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.BirthdayDate) : @Html.DisplayFor(model => model.BirthdayDate)</div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.State) : @Html.DisplayFor(model => model.State)</div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.Classrooms.Title) : @Html.DisplayFor(model => model.Classrooms.Title) | <a href='javascript:window.location.href = "@Url.Action("Details", "Classrooms", new { id = Model.Classrooms.Id} )";'>Voir détails de la classe</a></div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.Levels.Title) : @Html.DisplayFor(model => model.Levels.Title)</div>
        </div>
        <div class="row">
            <div class="col">@Html.DisplayNameFor(model => model.Tutors.LastName) : @Html.DisplayFor(model => model.Tutors.LastName) | <a href='javascript:window.location.href = "@Url.Action("Details", "Tutors", new { id = Model.Tutors.Id} )";'>Voir détails du tuteur</a></div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Modifier", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Retour à la liste", "Index") |
    </p>
</div>

